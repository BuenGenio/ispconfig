	<release>8</release>

	<homepage>http://www.gomobi.info/</homepage>

	<vendor>
		<name>goMobi</name>
		<homepage>http://www.gomobi.info/</homepage>
		<icon path="images/logo.png" />
	</vendor>

	<packager>
		<name>Afilias Technologies Ltd.</name>
		<homepage>http://www.gomobi.info</homepage>
		<icon path="images/logo.png" />
		<uri>uuid:55098c00-5bdb-11e1-b86c-0800200c9a66</uri>
	</packager>

