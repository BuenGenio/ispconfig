		<presentation>
			<name>SugarCRM Instance</name>
			<summary>Basic services</summary>
			<infolinks>
				<link class="support" href="https://community.sugarcrm.com/sugarcrm">SugarCRM CE support</link>
			</infolinks>
			<entry-points>
				<entry class="control-panel" dst="/index.php" method="POST">
					<label>Application entry point</label>
					<variable name="module">Users</variable>
					<variable name="action">Authenticate</variable>
					<variable name="return_module">Users</variable>
					<variable name="return_action">Login</variable>
					<variable name="cant_login"/>
					<variable name="login_module"/>
					<variable name="login_action"/>
					<variable name="login_record"/>
					<variable class="login" name="user_name" value-of-setting="admin_name"/>
					<variable class="password" name="user_password" value-of-setting="admin_password"/>
					<variable name="login_theme">Sugar</variable>
					<variable name="login_language">en_us</variable>
					<variable name="Login">++Login++</variable>
				</entry>
			</entry-points>
		</presentation>

		<settings>
			<group class="authn">
				<name>Administrator's Account</name>
				<setting class="login" default-value="admin" id="admin_name" max-length="32" min-length="1" regex="^[a-zA-Z][0-9a-zA-Z_@\-]*" type="string">
					<name>Administrator's Login</name>
					<error-message>Please make sure the text you entered starts with a letter and continues with either numbers, letters, underscores or hyphens.</error-message>
				</setting>
				<setting class="password" id="admin_password" type="password">
					<name>Administrator's Password</name>
				</setting>
				<setting class="email" id="admin_email" installation-only="true" type="string">
					<name>Administrator's email</name>
				</setting>
				<setting default-value="" id="admin_fname" type="string">
					<name>Administrator's First Name</name>
				</setting>
				<setting default-value="" id="admin_lname" type="string">
					<name>Administrator's Last Name</name>
				</setting>
			</group>
			<group class="web">
				<setting class="title" default-value="SugarCRM" id="title" type="string">
					<name>System Name</name>
					<description>This name will be displayed in the browser title bar when users visit the Sugar application.</description>
				</setting>
				<setting default-value="true" id="send_usage_statistics" installation-only="true" type="enum">
					<name>Send Anonymous Usage Statistics</name>
					<description>If selected 'Yes', Sugar will send anonymous statistics about your installation to SugarCRM Inc. every time your system checks for new versions.</description>
					<choice id="true">
						<name>Yes</name>
					</choice>
					<choice id="false">
						<name>No</name>
					</choice>
				</setting>
				<setting default-value="manual" id="check_for_updates" type="enum">
					<name>Check For Updates</name>
					<description>How the system will check for updated versions of the application.</description>
					<choice id="automatic">
						<name>Automatic</name>
					</choice>
					<choice id="manual">
						<name>Manual</name>
					</choice>
				</setting>
			</group>
		</settings>

		<requirements>
			<php:version min="5.2.1" xmlns:php="http://apstandard.com/ns/1/php"/>
			<php:extension xmlns:php="http://apstandard.com/ns/1/php">mysql</php:extension>
			<php:extension xmlns:php="http://apstandard.com/ns/1/php">mbstring</php:extension>
		    <php:memory-limit xmlns:php="http://apstandard.com/ns/1/php">41943040</php:memory-limit>

			<db:db xmlns:db="http://apstandard.com/ns/1/db">
				<db:id>main</db:id>
				<db:default-name>sugarce</db:default-name>
				<db:can-use-tables-prefix>false</db:can-use-tables-prefix>
				<db:server-type>mysql</db:server-type>
				<db:server-min-version>5.0</db:server-min-version>
			</db:db>
		</requirements>

		<provision>
			<url-mapping>
				<default-prefix>sugarcrm</default-prefix>
				<installed-size>128711009</installed-size>

				<mapping path="htdocs" url="/">
					<php:permissions writable="true" xmlns:php="http://apstandard.com/ns/1/php"/>
					<php:handler xmlns:php="http://apstandard.com/ns/1/php">
						<php:extension>php</php:extension>
					</php:handler>

		<mapping url="cache">
			<php:permissions writable="true" xmlns:php="http://apstandard.com/ns/1/php"/>
		</mapping>
		<mapping url="custom">
			<php:permissions writable="true" xmlns:php="http://apstandard.com/ns/1/php"/>
		</mapping>
		<mapping url="data">
			<php:permissions writable="true" xmlns:php="http://apstandard.com/ns/1/php"/>
		</mapping>
		<mapping url="modules">
		<php:permissions writable="true" xmlns:php="http://apstandard.com/ns/1/php"/>
		</mapping>
		<mapping url="tmp">
		<php:permissions writable="true" xmlns:php="http://apstandard.com/ns/1/php"/>
			<mapping url="sessions">
				<php:permissions writable="true" xmlns:php="http://apstandard.com/ns/1/php"/>
			</mapping>
		</mapping>
		<mapping url="upload">
			<php:permissions writable="true" xmlns:php="http://apstandard.com/ns/1/php"/>
		</mapping>
				</mapping>
			</url-mapping>

			<configuration-script name="configure">
				<script-language>php</script-language>
				<structured-output/>
			</configuration-script>
		</provision>

		<service class="account" id="account">
			<presentation>
				<name>SugarCRM Account</name>
				<summary>SugarCRM Account Service</summary>
				<entry-points>
					<entry class="control-panel" dst="/index.php" method="POST">
						<label>Account entry point</label>
						<variable name="module">Users</variable>
						<variable name="action">Authenticate</variable>
						<variable name="return_module">Users</variable>
						<variable name="return_action">Login</variable>
						<variable name="cant_login"/>
						<variable name="login_module"/>
						<variable name="login_action"/>
						<variable name="login_record"/>
						<variable class="login" name="user_name" value-of-setting="user_login"/>
						<variable class="password" name="user_password" value-of-setting="user_password"/>
						<variable name="login_theme">Sugar</variable>
						<variable name="login_language">en_us</variable>
						<variable name="Login">++Login++</variable>
					</entry>
				</entry-points>
			</presentation>

			<settings>
				<group class="authn">
					<name>Account Preferences</name>
					<setting class="login" id="user_login" max-length="60" min-length="3" regex="^[a-zA-Z][0-9a-zA-Z_@\-\.]*" track-old-value="true" type="string">
						<name>Account's Login</name>
					</setting>
					<setting class="password" id="user_password" min-length="4" type="password">
						<name>Account's Password</name>
					</setting>
				</group>
				<group class="vcard">
					<group class="fn n">
						<setting class="given-name" id="first_name" max-length="30" type="string">
							<name>First Name</name>
						</setting>
						<setting class="family-name" id="last_name" max-length="30" type="string">
							<name>Last Name</name>
						</setting>
					</group>
					<group class="email">
						<setting class="email" id="user_email" type="string">
							<name>Email</name>
						</setting>
					</group>
					<setting class="title" id="title" type="string">
						<name>Title</name>
					</setting>
					<setting class="organization-unit" id="department" type="string">
						<name>Department</name>
