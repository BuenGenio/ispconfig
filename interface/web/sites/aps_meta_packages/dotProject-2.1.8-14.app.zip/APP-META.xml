	<service id="dotproject">
		<license must-accept="true">
			<text>
				<name>GNU GENERAL PUBLIC LICENSE</name>
				<file>htdocs/LICENSEandCOPYING</file>
			</text>
		</license>
		<presentation>
			<name>dotproject</name>
			<summary>dotproject Collaboration/Project management</summary>
			<infolinks>
				<link class="support" href="http://forums.dotproject.net/">dotproject support</link>
			</infolinks>
			<entry-points>
				<entry class="control-panel" dst="/index.php" method="POST">
					<label>Administrative interface</label>
					<variable class="" name="username" value-of-setting="admin_name"/>
					<variable class="" name="password" value-of-setting="admin_password"/>
				</entry>
			</entry-points>
		</presentation>
		<settings>
			<group class="authn">
				<name>Administrator's preferences</name>
				<setting class="login" default-value="admin" id="admin_name" max-length="32" min-length="1" type="string">
					<name>Administrator's name</name>
					<error-message>Please make sure the text you entered starts	 with a letter and continues with either numbers, letters, underscores or hyphens.</error-message>
				</setting>
				<setting class="password" id="admin_password" max-length="32" min-length="1" type="password">
					<name>Password</name>
				</setting>
			</group>
		</settings>
		<requirements>
			<php:version min="4.1" xmlns:php="http://apstandard.com/ns/1/php"/>
			<php:extension xmlns:php="http://apstandard.com/ns/1/php">mysql</php:extension>
			<php:extension xmlns:php="http://apstandard.com/ns/1/php">gd</php:extension>
			<php:safe-mode xmlns:php="http://apstandard.com/ns/1/php">false</php:safe-mode>
			<php:register-globals xmlns:php="http://apstandard.com/ns/1/php">false</php:register-globals>
			<db:db xmlns:db="http://apstandard.com/ns/1/db">
				<db:id>main</db:id>
				<db:default-name>dotproject</db:default-name>
				<db:can-use-tables-prefix>
					false
				</db:can-use-tables-prefix>
				<db:server-type>mysql</db:server-type>
				<db:server-min-version>3.23.51</db:server-min-version>
			</db:db>
		</requirements>
		<provision>
			<url-mapping>
				<default-prefix>/dotproject/</default-prefix>
				<installed-size>13072452</installed-size>
				<mapping path="htdocs" url="/">
					<php:handler xmlns:php="http://apstandard.com/ns/1/php">
						<php:extension>php</php:extension>
					</php:handler>
					<mapping url="files">
						<php:permissions writable="true" xmlns:php="http://apstandard.com/ns/1/php"/>
					</mapping>
					<mapping url="locales/en">
						<php:permissions writable="true" xmlns:php="http://apstandard.com/ns/1/php"/>
					</mapping>
					<mapping url="session">
						<php:permissions writable="true" xmlns:php="http://apstandard.com/ns/1/php"/>
					</mapping>
				</mapping>
			</url-mapping>
			<configuration-script name="configure">
				<script-language>php</script-language>
			</configuration-script>
		</provision>
