		<presentation>
			<name>eGroupWare</name>
			<summary>eGroupWare Community Edition</summary>
			<infolinks>
				<link class="support" href="https://www.egroupware.org/community_support">eGroupWare Community support</link>
			</infolinks>
			<entry-points>
				<entry class="control-panel" dst="/login.php" method="POST">
					<label>Administrator Management Area</label>
					<description/>
					<variable name="passwd_type">text</variable>
					<variable name="account_type">u</variable>
					<variable name="logindomain">default</variable>
					<variable class="login" name="login" value-of-setting="admin_login">admin</variable>
					<variable class="password" name="passwd" value-of-setting="admin_passwd">egroupware</variable>
					<variable name="submitit">++Login++</variable>
				</entry>
				<entry class="control-panel" dst="/setup/index.php" method="POST">
					<label>Setup Administrator Management Area</label>
					<description/>
					<variable class="login" name="FormUser" value-of-setting="setupadmin_login">admin</variable>
					<variable name="ConfigLang">en</variable>
					<variable class="password" name="FormPW" value-of-setting="setupadmin_passwd">egroupware</variable>
					<variable name="FormDomain">default</variable>
					<variable name="ConfigLogin">Login</variable>
					<variable name="Submit">Login</variable>
				</entry>
				<entry class="control-panel" dst="/setup/manageheader.php" method="POST">
					<label>Header Administrator Management Area</label>
					<description/>
					<variable class="login" name="FormUser" value-of-setting="headeradmin_login">admin</variable>
					<variable name="ConfigLang">en</variable>
					<variable class="password" name="FormPW" value-of-setting="headeradmin_passwd">egroupware</variable>
					<variable name="Submit">Login</variable>
					<variable name="HeaderLogin">Login</variable>
				</entry>
			</entry-points>
		</presentation>
		<settings>
			<group class="authn">
				<name>Administrator's preferences</name>
				<setting class="login" id="admin_login" installation-only="true" max-length="32" min-length="1" regex="^[a-zA-Z][0-9a-zA-Z_\-]*" type="string">
					<name>Administrator's login</name>
					<error-message>Please make sure the text you entered starts with a letter and continues with either numbers, letters, underscores or hyphens.</error-message>
				</setting>
				<setting class="password" id="admin_passwd" min-length="1" type="password">
					<name>Admin Password</name>
				</setting>
			</group>
			<group>
				<name>Setup admin preferences</name>
				<setting class="login" default-value="setupadmin" id="setupadmin_login" max-length="32" min-length="1" regex="^[a-zA-Z][0-9a-zA-Z_\-]*" type="string">
					<name>Setup admin login</name>
					<error-message>Please make sure the text you entered starts with a letter and continues with either numbers, letters, underscores or hyphens.</error-message>
				</setting>
				<setting class="password" id="setupadmin_passwd" min-length="1" type="password">
					<name>Setup Admin Password</name>
				</setting>
			</group>
			<group>
				<name>Header admin preferences</name>
				<setting class="login" default-value="headeradmin" id="headeradmin_login" max-length="32" min-length="1" regex="^[a-zA-Z][0-9a-zA-Z_\-]*" type="string">
					<name>Header admin login</name>
					<error-message>Please make sure the text you entered starts with a letter and continues with either numbers, letters, underscores or hyphens.</error-message>
				</setting>
				<setting class="password" id="headeradmin_passwd" min-length="1" type="password">
					<name>Header Admin Password</name>
				</setting>
				<setting default-value="eGroupWare" id="title" installation-only="true" min-length="1" type="string">
					<name>Site name</name>
				</setting>
			</group>
			<group>
				<name>Standart mailserver settings</name>
				<setting default-value="localhost" id="mail_server" min-length="1" type="string">
					<name>IMAP mail server hostname or IP address</name>
				</setting>
				<setting default-value="localhost" id="mail_suffix" min-length="1" type="string">
					<name>Mail domain</name>
				</setting>
				<setting default-value="localhost" id="smtp_server" min-length="1" type="string">
					<name>SMTP server hostname or IP address</name>
				</setting>
			</group>
		</settings>
